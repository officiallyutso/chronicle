{
  "name": "chronicle",
  "displayName": "Chronicle",
  "description": "A helper/tracker tool.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chronicle.activateChronicle",
    "onCommand:chronicle.deactivateChronicle"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chronicle.openLog",
        "title": "Chronicle: Open Activity Log"
      },
      {
        "command": "chronicle.deactivateChronicle",
        "title": "Chronicle: Deactivate Logging"
      },
      {
        "command": "chronicle.activateChronicle",
        "title": "Chronicle: Activate Logging"
      }
    ]
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "vscode:prepublish": "npm run build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run build",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}